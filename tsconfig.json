{
  "extends": "@open-web3/dev-config/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@cord.network/base": [
        "packages/base/src"
      ],
      "@cord.network/base/*": [
        "packages/base/src/*"
      ],
      "@cord.network/types": [
        "packages/types/src"
      ],
      "@cord.network/types/*": [
        "packages/types/src/*"
      ],
      "@cord.network/type-definitions": [
        "packages/type-definitions/src"
      ],
      "@cord.network/type-definitions/*": [
        "packages/type-definitions/src/*"
      ],
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  },
}
