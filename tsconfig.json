{
  "extends": "@open-web3/dev-config/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@cordnetwork/api": [
        "packages/api/src"
      ],
      "@cordnetwork/api/*": [
        "packages/api/src/*"
      ],
      "@cordnetwork/api-derive": [
        "packages/api-derive/src"
      ],
      "@cordnetwork/api-derive/*": [
        "packages/api-derive/src/*"
      ],
      "@cordnetwork/types": [
        "packages/types/src"
      ],
      "@cordnetwork/types/*": [
        "packages/types/src/*"
      ],
      "@cordnetwork/type-definitions": [
        "packages/type-definitions/src"
      ],
      "@cordnetwork/type-definitions/*": [
        "packages/type-definitions/src/*"
      ],
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  },
}
